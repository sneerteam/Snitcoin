<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@color/exchangeRateRow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exchangeRateRowCurrencyCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="USD"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/exchangeRateRowRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="rate"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/exchangeRateRowRateValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="436.98"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exchangeRateRowDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="(default)"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/exchangeRateRowBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="balance"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/exchangeRateRowBalanceValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="18.35"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>

</LinearLayout>
