<?xml version="1.0" encoding="utf-8"?>
<manifest package="io.github.felipebueno.snitcoin"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".SnitcoinApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="SneerApp"
            android:value=""/>

        <activity
            android:name=".SnitcoinActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".BitcoinRequestActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:label="Bitcoin Request"
            android:theme="@style/Theme.AppCompat.Light.Dialog">
            <meta-data
                android:name="sneer:session-type"
                android:value="bitcoin-request"/>
        </activity>
        <activity
            android:name=".BitcoinRequestReceivedActivity"
            android:excludeFromRecents="true"
            android:label="Bitcoin Request Received"
            android:theme="@style/Theme.AppCompat.Light.Dialog">
        </activity>
        <activity
            android:name=".ExchangeRatesActivity"
            android:excludeFromRecents="true"
            android:label="Exchange Rates"
            android:theme="@style/Theme.AppCompat.Light.Dialog">
        </activity>
    </application>

</manifest>
